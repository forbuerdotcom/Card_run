<!-- Путь: Views/ShopView.xaml -->
<UserControl x:Class="Card_run.Views.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Background="SlateGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Центральная область с DropZone -->
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gold" BorderThickness="3" CornerRadius="10" 
                Background="#FF4A4A4A" Margin="20" AllowDrop="True" 
                Drop="DropZone_Drop" DragOver="DropZone_DragOver">
            <Grid>
                <TextBlock x:Name="DropZonePlaceholder" 
                           Text="Перетащите карту сюда для улучшения" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontSize="24" 
                           Foreground="LightGray"
                           Visibility="Visible"/>
                <Border x:Name="CardInDropZone" 
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="DarkGray" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Background="White"
                        Width="120" 
                        Height="180" 
                        Margin="7">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="DropZoneCardName" Grid.Row="0" FontWeight="Bold" TextAlignment="Center" TextTrimming="CharacterEllipsis" FontSize="14" Margin="2"/>

                        <Image x:Name="DropZoneCardImage" Grid.Row="1" Stretch="UniformToFill" Margin="5"/>

                        <Grid Grid.Row="2" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- HP -->
                            <Grid Grid.Column="0">
                                <Ellipse Width="25" Height="25" Fill="Lime" Stroke="Black" StrokeThickness="1"/>
                                <TextBlock x:Name="DropZoneHP" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                            </Grid>

                            <!-- Defence -->
                            <Grid Grid.Column="1">
                                <Rectangle Width="25" Height="25" Fill="Gray" Stroke="Black" StrokeThickness="1"/>
                                <TextBlock x:Name="DropZoneDefence" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                            </Grid>

                            <!-- AD -->
                            <Grid Grid.Column="2">
                                <Polygon Points="0,0,35,0,18,25" Fill="Red" Stroke="Black" StrokeThickness="1"/>
                                <TextBlock x:Name="DropZoneAD" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="White"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Панель справа с золотом и кнопкой улучшения -->
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <!-- Золото -->
            <Border BorderBrush="Gold" BorderThickness="2" CornerRadius="5" Background="#FF4A4A4A" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Золото:" FontSize="18" Foreground="Gold" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="GoldTextBlock" Text="0" FontSize="24" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <!-- Кнопка улучшения -->
            <Button x:Name="UpgradeButton" 
                    Content="Улучшить: 0 золота" 
                    Width="200" 
                    Height="60" 
                    FontSize="18" 
                    FontWeight="Bold"
                    Visibility="Collapsed"
                    Click="UpgradeButton_Click"
                    Background="Gold"
                    Foreground="Black"
                    BorderThickness="2"
                    BorderBrush="DarkGoldenrod"/>
        </StackPanel>

        <!-- Карты колоды снизу -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="Black" 
                BorderThickness="2" 
                CornerRadius="5" 
                Margin="10" 
                Background="#FF2A2A2A"
                Height="220">
            <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                <WrapPanel x:Name="DeckCardsPanel" Orientation="Horizontal" Margin="10"/>
            </ScrollViewer>
        </Border>

        <!-- Кнопка выхода -->
        <Button Grid.Row="0" Grid.Column="1" 
                Content="Выйти из магазина" 
                Width="200" 
                Height="50" 
                FontSize="16" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="20"
                Click="ExitButton_Click"/>
        
        <!-- Кнопка инструкции -->
        <Button Grid.Row="1" Grid.Column="1" 
                Content="Инструкция" 
                Width="200" 
                Height="50" 
                FontSize="16" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20"
                Click="ShowInstruction_Click"
                Background="DarkBlue" Foreground="White" FontWeight="Bold" BorderThickness="2" BorderBrush="Navy"/>
    </Grid>
</UserControl>
