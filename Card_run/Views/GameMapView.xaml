<UserControl x:Class="Card_run.Views.GameMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Card_run.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <!-- 
        Canvas - это холст, на котором мы можем размещать элементы 
        в любых координатах. x:Name="GraphCanvas" создает переменную 
        с этим именем в C# коде, чтобы мы могли к нему обращаться.
    -->
    <Grid>
        <Canvas x:Name="GraphCanvas" Background="LightGray">
            <!-- Вершины (кружочки) и ребра (линии) будут добавлены сюда из кода C# -->
        </Canvas>
        
        <!-- Панель с золотом и счетом в правом верхнем углу -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Top" 
                BorderBrush="Gold" BorderThickness="2" CornerRadius="5" 
                Background="#FF4A4A4A" Padding="15" Margin="20">
            <StackPanel>
                <TextBlock Text="Золото:" FontSize="18" Foreground="Gold" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="GoldTextBlock" Text="0" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <TextBlock Text="Счет:" FontSize="18" Foreground="Cyan" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="ScoreTextBlock" Text="0" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <Button Content="Инструкция" Width="150" Height="40" Click="ShowInstruction_Click" 
                        Background="DarkBlue" Foreground="White" FontWeight="Bold" BorderThickness="2" BorderBrush="Navy"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>