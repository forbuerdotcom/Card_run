<UserControl x:Class="Card_run.Views.BattleCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Card_run.Views"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="150">

    <!-- Основная рамка карты со стилем и триггером для состояния "Dead" -->
    <Border x:Name="CardBorder" BorderBrush="Black" BorderThickness="3" CornerRadius="8" Background="White"
            Width="150" Height="220" MouseEnter="Card_MouseEnter" MouseLeave="Card_MouseLeave"
            MouseLeftButtonUp="Card_MouseLeftButtonUp">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <!-- Триггер, который срабатывает, когда статус карты становится "Dead" -->
                    <DataTrigger Binding="{Binding Status}" Value="Dead">
                        <Setter Property="Background" Value="#555555"/>
                        <Setter Property="Opacity" Value="0.7"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <!-- Увеличим высоту для имени, чтобы было место для двух строк -->
                <RowDefinition Height="Auto" MinHeight="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Viewbox для автоматического масштабирования имени карты -->
            <Viewbox Grid.Row="0" Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,2,5,2">
                <TextBlock x:Name="CardName" Text="{Binding Name}" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" FontSize="16"/>
            </Viewbox>

            <Image x:Name="CardImage" Grid.Row="1" Stretch="UniformToFill" Margin="5" Source="{Binding ImagePath}"/>

            <!-- Grid для характеристик -->
            <Grid Grid.Row="2" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- HP -->
                <Grid Grid.Column="0">
                    <Ellipse Width="30" Height="30" Fill="Lime" Stroke="Black" StrokeThickness="1"/>
                    <TextBlock Text="{Binding CurrentHP}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                </Grid>

                <!-- Defence + Shield -->
                <Grid Grid.Column="1">
                    <Rectangle Width="30" Height="30" Fill="Gray" Stroke="Black" StrokeThickness="1"/>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Defence}" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Shield}" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold" Foreground="LightBlue"/>
                    </StackPanel>
                </Grid>

                <!-- AD -->
                <Grid Grid.Column="2">
                    <Polygon Points="0,0,45,0,22.5,30" Fill="Red" Stroke="Black" StrokeThickness="1" RenderTransformOrigin="0.688,0.493"/>
                    <TextBlock Text="{Binding AD}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Grid>

            <!-- Оверлей для мертвой карты с плавной анимацией затемнения -->
            <Rectangle x:Name="DeathOverlay" Grid.RowSpan="3" Fill="Black" Opacity="0">
                <Rectangle.Style>
                    <Style TargetType="Rectangle">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Dead">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                            To="0.6" Duration="0:0:0.4" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>
            </Rectangle>

        </Grid>
    </Border>
</UserControl>